<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
]
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_home_btn_profile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="16dp"
                android:background="@drawable/round_button"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_home_txt_profile" />

        </TableRow>

        <TableRow
            android:gravity="center"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/fragment_home_btn_matches"

                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:background="@drawable/round_button"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/profile_match" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/activity_home_txt_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activity_home_txt_match" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>